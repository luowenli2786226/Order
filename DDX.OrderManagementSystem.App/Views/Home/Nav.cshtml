@model List<DDX.OrderManagementSystem.App.MenuItem>
@{
    Layout = null;
}

<script type="text/javascript">
    function ShowPrint()
    {
        window.open('/PackingScan/PackingScanV2/');
    }
</script>

<div id="nav" class="easyui-accordion" fit="true" border="false">

    @foreach (var menu in Model)
    {
        <div title=" @menu.menuname" iconCls="menuItem @menu.icon" >
            @if (menu.menus != null)
            {
                <ul>

                    @foreach (var submenu in menu.menus)
                    {
                        string menuid = "menu" + submenu.menuid;
                        if (submenu.menuname == "包装扫描 V2")
                        {
                          <li>
                            <div><a onclick="ShowPrint()"; ref="@menu.menuname" href="#" rel='@submenu.url' id="@menuid"><span class="icons @submenu.icon" >&nbsp;</span>&nbsp;&nbsp;<span class="nav">@submenu.menuname</span></a></div>
                        </li>
                           
                        }
                        else
                        {
                        <li>
                            <div><a ref="@menu.menuname" href="#" rel='@submenu.url' id="@menuid"><span class="icons @submenu.icon" >&nbsp;</span>&nbsp;&nbsp;<span class="nav">@submenu.menuname</span></a></div>
                        </li>
                        }
                    }

                </ul>
            }
        </div>
    }

</div>
