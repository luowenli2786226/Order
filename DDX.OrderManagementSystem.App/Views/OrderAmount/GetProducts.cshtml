@{
    Layout = null;
}
<script type="text/javascript">
    $(function () {
        $('#dg1').datagrid({
            url: '@Url.Action("GetProductList", "OrderAmount")/@ViewData["Id"]',
            showFooter: true,
            width: 700
        });
    });
    function GetImg(v, r, i) {
        return '<img  src=' + v + '  height="64px" width="64px" />';
    }

  
</script>
<table id="dg1"
  style="height: 400px;">
    <thead>
        <tr>
            <th field="SKU" width="80" >SKU
            </th>
               <th field="PicUrl" width="100" formatter='GetImg'>图片
                    </th>
            <th field="Standard" width="100">规格
            </th>
            <th field="Title" width="100">名称
            </th>
            <th field="Qty" width="60">Qty
            </th>
            <th field="Price" width="100">单价
            </th>
            <th field="TotalPrice" width="100">总
            </th>
        </tr>
    </thead>
</table>
