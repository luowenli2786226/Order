@model DDX.OrderManagementSystem.Domain.WarehouseLineType

@{
    Layout = null;
}

<script type="text/javascript">
    $(function () {
        //这里写加载下拉列表、修改编辑控件的初始化值
        $('#c_AreaId').combogrid({
            required: true,
            editable: false,
            panelWidth: 120,
            idField: 'AreaId',
            textField: 'AreaCode',
            url: '/WarehouseLine/QList',
            fit: true,
            columns: [[
                { field: 'AreaId', title: '区域Id', width: 100, hidden: true },
                { field: 'AreaCode', title: '区域编码', width: 100 }
            ]]
        });
    });
</script>

@using (Html.BeginForm("Create", "WarehouseLine", FormMethod.Post, new { id = "c_form" }))
{
<fieldset>
<table class="editForm">
	<tr>
		<td>
            @Html.LabelFor(model => model.AreaId, "区域:")
		</td>
		<td>
            @Html.TextBoxFor(model => model.AreaId, new { @id = "c_AreaId" })
		</td>
        <td style="display: none">
            @Html.TextBoxFor(model => model.AreaCode, new { @id = "c_AreaCode" })
        </td>
	</tr>

</table>
</fieldset>
}
