                            //} else {
                            //    progress = 2;
                            //    ShowMessage(null, "订单商品扫描结束！等待扫描跟踪码...", true);
                            //}
                            progress = 0;
                            //$("#tOrder")[0].style.textDecorationLineThrough = true;
                            //$("#tProducts")[0].style.textDecorationLineThrough = true;
                            //ShowMessage(null, "订单包装扫描结束！等待扫描跟踪码...", true);
                            
