            function Scan() {
                if (txt.value == "") { Reset(); return; }
                if (progress == 0) {
                    // 
                    TrackCodeLength = -1;
                    TrackCodeLength2 = -1;
                    getOrder(txt.value);
                }
                else if (progress == 1) {
                    getSKU(txt.value);
                }
               
                txt.value = "";
                $("#txt").focus();
            }

            // 获取SKU
            function getSKU(c) {
                jQuery.ajax({
                    url: "/PackingScan/IsValidateSKU/",
                    type: "post",
                    data: "code=" + c,
                    success: function (msg) {
                        if (msg.IsSuccess) {
                            progress = 1;
                            code = c;
                            
                            //$("#tc").focus();
                            setSKU(msg.Result);
                        } else {
                            progress = 1;

                            ShowMessage(null, "错误：" + msg.Result, false);
                            Player1.controls.play();
                        }
                    }
                });
            }

            // 获取订单信息
            function getOrder(d) {
               
                for (var i = 0; i < skuCode.length; i++) {
                    if (skuCode[i].toUpperCase() == code.toUpperCase()) {
                        ShowMessage(null, "扫描错误！该条码已被配货扫描了！禁止重复操作！", false);
                        Player5.controls.play();
                        return;
                    }
