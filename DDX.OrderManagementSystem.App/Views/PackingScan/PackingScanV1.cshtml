            function Scan() {
                if (txt.value == "") { Reset(); return; }
                if (progress == 0) {
                    // 
                    TrackCodeLength = -1;
                    TrackCodeLength2 = -1;
                    getOrder(txt.value);
                }
                else if (progress == 1) {
                    getSKU(txt.value);
                }
                else if (progress == 2)
                {
                    DeliveryScan(txt.value);
                }
                txt.value = "";
                $("#txt").focus();
            }

            // 获取SKU
            function getSKU(c) {
                jQuery.ajax({
                    url: "/PackingScan/GetSKUByCode/",
                    type: "post",
                    data: "code=" + c,
                    success: function (msg) {
                        if (msg.IsSuccess) {
                            progress = 1;
                            code = c;
                            setSKU(msg.Result);
                        } else {
                            progress = 1;

                            ShowMessage(null, "错误：" + msg.Result, false);
                            Player1.controls.play();
                        }
                    }
                });
            }

