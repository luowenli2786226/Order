@model DDX.OrderManagementSystem.Domain.AccountType
@{
    Layout = null;
}

<script type="text/javascript">
    $(function () {

        $('#c_Platform').combobox({
            url: '@Url.Action("GetOptions", "DataDictionaryDetail")/SalePlatform',
            valueField: 'DicValue',
            textField: 'FullName',
            required: true,
            width: 150,
            panelHeight: 'auto',
            onChange: pChange
        });
        $('#c_Platform').combobox("setValue", "Ebay");
        pChange('Ebay', "");


        $('#c_FromArea').combobox({
            url: '@Url.Action("GetOptions", "DataDictionaryDetail")/FromArea',
            valueField: 'DicValue',
            textField: 'FullName',
            panelHeight: 'auto'
        });

    });

    function pChange(n, o) {
        $('#tr1').hide();
        $('#tr2').hide();
        $('#tr3').hide();
        $('#btnEbayLogin').hide();
        $('#btnEbayToken').hide();
        $('#btnAliLogin').hide();
        if (n == "Ebay") {
            $('#tr3').show();
            $('#btnEbayLogin').show();
            $('#btnEbayToken').show();
        }
        if (n == "Aliexpress") {
            $('#tr1').show();
            $('#tr2').show();
            $('#tr3').show();
            $('#btnAliLogin').show();
        }
    }
    var code = "";
    function aliLogin() {

        var k = $("#c_ApiKey").val();
        var s = $("#c_ApiSecret").val();
        jQuery.ajax({
            url: "/Account/GetAliLoginUrl",
            type: "post",
            data: "k=" + k + "&s=" + s,
            success: function (res) {
                if (res.IsSuccess) {

                    window.open(res.Result);
                } else {
                    alert(res.ErrorMsg);
                }
            }
        });
    }
    var code = "";
    function ebayLogin() {
        jQuery.ajax({
            url: "/Account/GetEbayLoginUrl",
            type: "post",
            success: function (res) {
                if (res.IsSuccess) {
                    code = res.Code;

                    window.open(res.Result);
                } else {
                    alert(res.ErrorMsg);
                }
            }
        });
    }

    function getEbaySession() {
        jQuery.ajax({
            url: "/Account/GetEbaySession",
            type: "post",
            data: 'o=' + code,
            success: function (res) {
                if (res.IsError) {
                    alert(res.Message);
                } else {
                    $('#c_ApiToken').val(res.Result);
                }
            }
        });
    }
</script>

