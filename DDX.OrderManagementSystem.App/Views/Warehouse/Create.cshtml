@model DDX.OrderManagementSystem.Domain.WarehouseType

@{
    Layout = null;
}

<script type="text/javascript">
    $(function () {
        //这里写加载下拉列表、修改编辑控件的初始化值
        $('#c_Area').combobox({
            url: '/Warehouse/GetArea/',
            valueField: 'id',
            textField: 'text',
            width: 150,
            panelHeight: 'auto'
        });
        $('#e_Type').combobox({
            width: 150,
            valueField: 0,
            //valueField: '请选择',
            //textField: '请选择',
            textField: 1,
            panelHeight: 'auto',
            required: true,
            data: [["小包仓库", "小包仓库"], ["海外仓库", "海外仓库"],
            ]
        });
        $('#e_Type').combobox("setValue", "小包仓库");
    });
</script>

@using (Html.BeginForm("Create", "Warehouse", FormMethod.Post, new { id = "c_form" }))
{
<fieldset>
<table class="editForm">
	<tr>
		<td>
            @Html.LabelFor(model => model.WCode, "仓库代码:")
		</td>
		<td>
            @Html.TextBoxFor(model => model.WCode, new { @id = "c_WCode" })
		</td>
	</tr>

	<tr>
		<td>
            @Html.LabelFor(model => model.WName, "仓库名称:")
		</td>
		<td>
            @Html.TextBoxFor(model => model.WName, new { @id = "c_WName" })
		</td>
	</tr>

	<tr>
		<td>
            @Html.LabelFor(model => model.Address, "仓库地址:")
		</td>
		<td>
            @Html.TextBoxFor(model => model.Address, new { @id = "c_Address" })
		</td>
	</tr>

    <tr>
		<td>
            @Html.LabelFor(model => model.Area, "地区:")
		</td>
		<td>
            @Html.TextBoxFor(model => model.Area, new { @id = "c_Area" })
		</td>
	</tr>

    <tr>
		<td>
            @Html.LabelFor(model => model.Type,"类型:")
		</td>
		<td>
            @Html.TextBoxFor(model => model.Type,new{@id="e_Type"})
		</td>
	</tr>


</table>
</fieldset>
}
