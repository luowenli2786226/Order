@model DDX.OrderManagementSystem.Domain.WarehouseType
@{
    Layout = null;
}
<script type="text/javascript">
    $(function () {
        //这里写加载下拉列表、修改编辑控件的初始化值
        $('#e_Area').combobox({
            url: '/Warehouse/GetArea/',
            valueField: 'id',
            textField: 'text',
            width: 150,
            panelHeight: 'auto'
        });

        $('#e_Type').combobox({
            width: 150,
            valueField: 0,
            //valueField: '请选择',
            //textField: '请选择',
            textField: 1,
            panelHeight: 'auto',
            required: true,
            data: [["小包仓库", "小包仓库"], ["海外仓库", "海外仓库"],
            ]
        });
    });
</script>
@using (Html.BeginForm("Edit", "Warehouse", FormMethod.Post, new { id = "e_form" }))
{
<fieldset>
<table class="editForm">
	<tr>
