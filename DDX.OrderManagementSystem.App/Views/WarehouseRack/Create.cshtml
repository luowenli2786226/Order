@model DDX.OrderManagementSystem.Domain.WarehouseRackType

@{
    Layout = null;
}

<script type="text/javascript">
    $(function () {
        //这里写加载下拉列表、修改编辑控件的初始化值
        $('#c_LineId').combogrid({
            required: true,
            editable: false,
            panelWidth: 110,
            idField: 'LineId',
            textField: 'LineCode',
            url: '/WarehouseRack/QList',
            fit: true,
            columns: [[
                { field: 'LineId', title: '排位Id', width: 100, hidden: true },
                { field: 'LineCode', title: '排位编码', width: 100 }
            ]]
        });
    });
</script>

@using (Html.BeginForm("Create", "WarehouseRack", FormMethod.Post, new { id = "c_form" }))
{
<fieldset>
<table class="editForm">
	<tr>
		<td>
            @Html.LabelFor(model => model.LineId, "排位:")
		</td>
		<td>
            @Html.TextBoxFor(model => model.LineId, new { @id = "c_LineId" })
		</td>
        <td style="display: none">
            @Html.TextBoxFor(model => model.LineCode, new { @id = "c_LineCode" })
        </td>
	</tr>

</table>
</fieldset>
}
