    function DoAudit2(id, v, m, h, c) {
        if (!h)
            h = "";
        if (!c) {
            c = 0;
        }
        jQuery.ajax({
            url: "/Dispute/DoAudit/",
            type: "post",
            data: "k=" + id + "&a=" + v + "&m=" + m + "&zr=" + h + "&amount=" + c,
            success: function (res) {
                if (!res.IsSuccess) {
                    alert(res.ErrorMsg);
                }
                $('#dg').datagrid("reload");
            }
        });
    }

    function getamount(v, r, i) {

        var html = "";
        if (r.OrderAmount)
            if (r.OrderAmount > 0) {
                html += "需赔金额:" + r.OrderAmount + " <br />";
            }
        html += "实赔金额:" + v;
        return html;
    }

    function getAuditInfo(v, r, i) {

        if (r.Id == 0)
            return "";
        var html = "";
        if (v == 1) {
            html = "未处理";
        } else if (v == 2) {
            html = "已处理";
        } else if (v == 3) {
            html = "已审核,未付款";
        } else if (v == 4) {
            html = "已审核,已付款";
        } else if (v == 5) {
            html = "未处理,平台付款";
        }
        else if (v == 6) {
            html = "已处理,平台付款";
        }
        else if (v == 9) {
            html = "审核失败";
        } else {
            html = "未审核";
        }
        //html += '<br />' + r.ExamineType;
        html = "<b>" + html + "</b>";
        return html;
    }

