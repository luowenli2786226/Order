    function getRate(v, r, i) {
        var html = "";
        if (v > 50) {
            html = '<font color="#F00"><b>' + v + '%</b></font><br />';
        } else {
            html = v + "%";
        }
        var ttt = r.DisputeState + "";
        if (ttt.indexOf("重发") != -1) {
            html = '<font color="#F00"><b>100%</b></font><br />';
        }
        return html;
    }
